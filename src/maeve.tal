	DUP2 <path>
	;&b <str>
	<str>
	;&c !<str>

	&a "<a 20 "href=' $1
	&b ".html'> $1
	&c "</a> $1

@<path> ( str* -- )
	LDAk [ LIT "_ ] OVR #20 NEQ [ JMP SWP POP ] ,&a STR
	;&a .File2/write DEO2
	INC2 LDAk ?<path>
	POP2 JMP2r
	&a $1

@<str> ( str* -- )
