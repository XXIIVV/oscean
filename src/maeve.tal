@set-diary ( log* -- )
	( | validate photo id )
	#0006 ADD2 str/to-dec ORAk ?{ POP2 JMP2r }
	DUP2 get-diary ?{
		( bit ) #01 OVR #07 AND #40 SFT SFT STH
		( res ) #03 SFT2 ;diaries/buf ADD2 LDAk STHr ORA ROT ROT STA
		JMP2r }
	;dict/warn-duplicate str/<print>
	dec/<print>
	#0a18 DEO
	JMP2r

@get-diary ( id* -- mask )
	( bit ) #01 OVR #07 AND #40 SFT SFT STH
	( res ) #03 SFT2 ;diaries/buf ADD2 LDA STHr AND JMP2r

@find-available ( -- id* )
	#0001
	&>w
		DUP2 get-diary ?{ JMP2r }
		INC2 !&>w

